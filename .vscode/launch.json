{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach to a process",
            "pid": "${command:pickMyProcess}" // use ${command:pickProcess} to pick other users' processes
        },
        {
            "name": "Apple LLDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/pdpjes",
            "args":[
                "test/fixtures/kun01.txt",
                "test/fixtures/kun02.txt"
            ],
            "cwd": "${workspaceFolder}",
            "MIMode": "lldb"
        },
        {
            "name": "Brew LLDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/pdpjes",
            "args":[
                "test/fixtures/kun01.txt"
            ],
            "cwd": "${workspaceFolder}",
            "miDebuggerPath": "/usr/local/opt/llvm/bin/lldb"
        }
    ]
}